{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "api",
    "rootDir": "./src",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "resolveJsonModule": true,
    "allowJs": true,

    "removeComments": true,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@prismaClient/*": ["./src/database/*"],
      "@gql-schema": ["./src/graphQL/schema.graphql"]
    }
  },
  "include": ["src/**/*"]
}
